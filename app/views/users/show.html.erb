
<div class="card-avatar mt-10 mb-4">
  <div class="card-avatar-picture row g-0">
    <div class="profile col-md-4"><%= cl_image_tag(@user.photo.key, :transformation=>[
      {:width=>100, :height=>100, :gravity=>"face", :radius=>"max", :crop=>"thumb", :format=>"png"}])
    %>
    </div>
    <div class="row col-md-8">
      <div class="card-avatar-body position-absolute top-50 start-50 translate-middle">
        <h2><%= @user.first_name %> <%= @user.last_name %> </h2>
        <div class="d-flex">
          <div>
            <h5><i class="fas fa-at"></i> <%= @user.email %></h5>
          </div>
          <div>
            <h5><i class="fas fa-phone-alt"></i> <%= @user.phone_number %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-8 mb-4">
  <h3>I own</h3>
    <% @user.transports.each do |transport| %>
    <div class="col mb-2">
      <div class="card-product">
          <%= cl_image_tag transport.photo.key, crop: :fill, class:"card-img-top" %>
          <div class="card-product-infos">
            <h2><%=transport.name%></h2>
            <p><%= transport.description %></p>
            <p><i><i class="fas fa-map-marker-alt"></i> <%= transport.description %></i></p>
            <p class="card-product-price"><b><%= number_with_delimiter(transport.price, :delimiter => ',') %>â‚¬/day</b></p>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Delete #{transport.name}",
                transport_path(transport),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class:"btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
</div>

<div class="mt-8 mb-4">
<h3>I have booked</h3>
</div>