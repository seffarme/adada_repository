<!-- TITLE -->
<div class="d-flex align-items-center justify-content-between">
	<h1 class="mt-4 mb-4">All means of transportation <span>(<%= @transports.count %>)</span></h1>

	<!-- TRI -->
	<div class="dropdown">
	  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" 	aria-haspopup="true" aria-expanded="false">
	    CATEGORY
	  </button>
	  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		  <%= link_to "All", transports_path, class:"dropdown-item" %>
	    <%= link_to "#{Transport::CATEGORY[0]}", transports_path(params:{category:"#{Transport::CATEGORY[0]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[1]}", transports_path(params:{category:"#{Transport::CATEGORY[1]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[2]}", transports_path(params:{category:"#{Transport::CATEGORY[2]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[3]}", transports_path(params:{category:"#{Transport::CATEGORY[3]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[4]}", transports_path(params:{category:"#{Transport::CATEGORY[4]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[5]}", transports_path(params:{category:"#{Transport::CATEGORY[5]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[6]}", transports_path(params:{category:"#{Transport::CATEGORY[6]}"}), class:"dropdown-item" %>
			<%= link_to "#{Transport::CATEGORY[7]}", transports_path(params:{category:"#{Transport::CATEGORY[7]}"}), class:"dropdown-item" %>
	  </div>
	</div>
</div>

<!-- WORLDMAP -->
<div id="map"
      class="mb-4"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<!-- CARDS -->
<div class="row row-cols-sm-12 row-cols-md-6 row-cols-lg-3">
    <% @transports.each do |transport| %>
      <div class="col mb-4">
        <div class="card h-100">
          <h3 id="category-top-right"><%= transport.category %></h3>
          <%= cl_image_tag transport.photo.key, crop: :fill, class:"h-50" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to transport.name, transport_path(transport) %></h5>
            <p class="card-text bold"><%= number_with_delimiter(transport.price, :delimiter => ',') %>â‚¬/day</p>
            <p class="card-text"><%= transport.description %></p>
            <p class="card-text"><%= transport.address %></p>
          </div>
        </div>
      </div>
    <% end %>
</div>
