<!-- TITLE -->
<h1 class="mt-4 mb-4">All means of transportation <span>(<%= @transports.count %>)</span></h1>

<!-- WORLDMAP -->
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<!-- CARDS -->
<div class="row row-cols-1 row-cols-md-3 g-4 mb-4>
    <% @transports.each do |transport| %>
        <div class="col">
          <div class="card h-100">
            <h3 id="category-top-right"><%= transport.category %></h3>
            <%= cl_image_tag transport.photo.key, crop: :fill, class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to transport.name, transport_path(transport) %></h5>
              <p class="card-text bold"><%= number_with_delimiter(transport.price, :delimiter => ',') %>â‚¬/day</p>
              <p class="card-text"><%= transport.description %></p>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= transport.category %></small>
        </div>
      </div>
    </div>
  <% end %>

</div>
