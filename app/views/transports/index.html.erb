<!-- TITLE -->
<div class="d-flex align-items-center justify-content-between">
	<h1 class="mt-4 mb-4">All means of transportation <span>(<%= @transports.count %>)</span></h1>

	<!-- TRI -->
	<div class="dropdown">
	  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" 	aria-haspopup="true" aria-expanded="false">
	    FILTER
	  </button>
	  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
	    <%= link_to "Car", transports_path(params:{category:"Car"}), class:"dropdown-item" %>
			<%= link_to "Moto", transports_path(params:{category:"Moto"}), class:"dropdown-item" %>
			<%= link_to "Rocket", transports_path(params:{category:"Rocket"}), class:"dropdown-item" %>
			<%= link_to "Bicycle", transports_path(params:{category:"Bicycle"}), class:"dropdown-item" %>
			<%= link_to "Bus", transports_path(params:{category:"Bus"}), class:"dropdown-item" %>
			<%= link_to "Trotinette", transports_path(params:{category:"Trotinette"}), class:"dropdown-item" %>
			<%= link_to "Animals", transports_path(params:{category:"Animals"}), class:"dropdown-item" %>
			<%= link_to "Others", transports_path(params:{category:"Others"}), class:"dropdown-item" %>
	  </div>
	</div>
</div>


<!-- CARDS -->
<div class="row row-cols-1 row-cols-md-3 g-4 mb-4>
    <% @transports.each do |transport| %>
        <div class="col">
          <div class="card h-100">
            <h3 id="category-top-right"><%= transport.category %></h3>
            <%= cl_image_tag transport.photo.key, crop: :fill, class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to transport.name, transport_path(transport) %></h5>
              <p class="card-text bold"><%= number_with_delimiter(transport.price, :delimiter => ',') %>â‚¬/day</p>
              <p class="card-text"><%= transport.description %></p>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= transport.category %></small>
        </div>
      </div>
    </div>
  <% end %>

</div>
