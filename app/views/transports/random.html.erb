<!-- TITLE -->

<div class="main_wrapper m-4">
  <div class="row align-items-center justify-content-between">
    <div class="col-8">
      <div class="card-trip mb-4">
          <h3 id="category-top-right"><%= @transport.category %></h3>
          <%= cl_image_tag @transport.photo.key, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <h2><%= @transport.name %></h2>
              <p><%= @transport.description %></p>
            </div>
            <h3 class="card-trip-pricing"><%= number_with_delimiter(@transport.price, :delimiter => ',') %>â‚¬</h3>
            <%= cl_image_tag @transport.owner.photo.key, crop: :fill, class:"card-trip-user avatar-bordered" %>
          </div>
      </div>
    </div>

    <div class="col-4">
    <%= render "transports/form_booking" %>
    </div>

  </div>

</div>

<%#= link_to "Back to list", transports_path, class:"btn btn-light" %>

<% if current_user == @transport.owner %>
  <%= link_to "Delete #{@transport.name}",
              transport_path(@transport),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class:"btn btn-danger" %>
<% end %>

<%= render "transports/modal_booking" %>
